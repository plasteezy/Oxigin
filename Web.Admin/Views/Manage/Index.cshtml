@model Web.Admin.Models.AccountViewModel
@{
    ViewBag.Title = "Account Details";
}

@section header{
    <div class="page-header">
        <h1 class="pull-left">
            <i class="fa fa-user"></i>
            <span>My Account :: Details</span>
        </h1>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-header dark-background">
                <div class="title">
                    <div class="fa fa-th-large"></div>
                    Account Details
                </div>
                <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#">
                        <i></i>
                    </a>
                </div>
            </div>
            <div class="box-content">
                <div class="form-group">
                    @Html.LabelFor(model => model.AccountName)
                    <div style="display: block">
                        @Html.DisplayFor(model => model.AccountName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Username)
                    <div style="display: block">
                        @Html.DisplayFor(model => model.Username)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Phone)
                    <div style="display: block">
                        @Html.DisplayFor(model => model.Phone)
                    </div>
                </div>

                <div class="form-actions form-actions-padding-sm form-actions-padding-md form-actions-padding-lg" style="margin-bottom: 0;">
                    <a href="@Url.Action("ChangePassword", "Manage")" class="btn btn-sm btn-primary">Change Password</a>
                    <a href="@Url.Action("ChangeAccountName", "Manage")" class="btn btn-sm btn-success">Change Account Name</a>
                    <a href="@Url.Action("ChangeAccountPhone", "Manage")" class="btn btn-sm btn-warning">Change Phone Number</a>
                </div>
            </div>
        </div>
    </div>
</div>