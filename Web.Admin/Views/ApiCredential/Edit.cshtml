@using Secure_Coding.MvcSecurityExtensions
@model Web.Data.Model.ApiCredential

@{
    ViewBag.Title = "Edit";
}

@section header{
	<div class="page-header">
        <h1 class="pull-left">
            <i class="fa fa-pencil-square"></i>
            <span>API Credential :: Edit</span>
        </h1>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-header dark-background">
                <div class="title">
                    <div class="fa fa-pencil-square"></div>
                    Enter API Credential Details
                </div>
                <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#">
                        <i></i>
                    </a>
                </div>
            </div>
            <div class="box-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.Partial("_CreateOrEdit", Model)
                    <div class="form-group">
                        <label for="IsActive">Activate?</label>
                        @Html.EditorFor(model => model.IsActive, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsActive)
                    </div>

                    @Html.AntiModelInjectionFor(model => model.ApiCredentialId)
                    @Html.AntiModelInjectionFor(model => model.Secret)
                    @Html.AntiModelInjectionFor(model => model.Key)
                    @Html.AntiModelInjectionFor(model => model.DateCreated)

                    @Html.HiddenFor(model => model.ApiCredentialId)
                    @Html.HiddenFor(model => model.DateCreated)
                    @Html.HiddenFor(model => model.Secret)
                    @Html.HiddenFor(model => model.Key)
                    <div class="form-actions form-actions-padding-sm form-actions-padding-md form-actions-padding-lg" style="margin-bottom: 0;">
                        <input type="submit" class="btn btn-success btn-sm" value="Save" /> or
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-danger">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

