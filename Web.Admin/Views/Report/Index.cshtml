@model IEnumerable<Web.Admin.Models.SavedQuery>
@{
    ViewBag.Title = "Index";
}

@section header{
    <div class="page-header">
        <h1 class="pull-left">
            <i class="fa fa-list-alt"></i>
            <span>All Reports</span>
        </h1>
    </div>
}

@if (!Model.Any())
{
    <div class="panel panel-primary">
        <div class="panel-body">
            Your report list is empty. Click <a href="@Url.Action("Create", "Report")" style="color:blue">here</a> to add a new report.
        </div>
    </div>
}
else
{
    <p>
        <a href="@Url.Action("Create")" class="btn btn-sm btn-success"><i class="fa fa-plus-square"></i> New Report</a>
    </p>
    <div class='row'>
        <div class='col-sm-12'>
            <div class='box orange-border' style='margin-bottom:0;'>
                <div class='box-header dark-background'>
                    <div class='title'>
                        <div class='fa fa-list-alt'></div>
                        All Reports
                    </div>
                    <div class='actions'>
                        <a class="btn box-collapse btn-xs btn-link" href="#">
                            <i></i>
                        </a>
                    </div>
                </div>
                <div class='box-content box-no-padding'>
                    <div class='responsive-table'>
                        <div class='scrollable-area'>
                            <table class='data-table-column-filter table table-bordered table-striped' style='margin-bottom:0;'>
                                <thead>
                                    <tr>
                                        <th>
                                            Description
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                <a class='btn btn-danger btn-xs' href='@Url.Action("Delete", new {id = item.Id})'>
                                                    <i class='icon-trash'></i> Delete
                                                </a>
                                                <a class='btn btn-success btn-xs' href='@Url.Action("Execute", new {id = item.Id})'>
                                                    <i class='icon-trash'></i> Run report
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2">Description</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="@Url.Content("~/assets/javascripts/plugins/datatables/datatables.min.js")" type="text/javascript"></script>
}