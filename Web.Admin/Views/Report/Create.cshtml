@model Web.Admin.Models.SavedQuery

@{
    ViewBag.Title = "Reports - Create";
	ViewBag.IsEditing = false;
}

@section header{
    <div class="page-header">
        <h1 class="pull-left">
            <i class="fa fa-briefcase"></i>
            <span>Custom Reports</span>
        </h1>
    </div>
}


<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-header dark-background">
                <div class="title">
                    <div class="fa fa-plus-square"></div>
                    Add New Report
                </div>
                <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#">
                        <i></i>
                    </a>
                </div>
            </div>
            <div class="box-content">

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                    @Html.Partial("_CreateOrEdit", Model)
                    <div class="form-actions form-actions-padding-sm form-actions-padding-md form-actions-padding-lg" style="margin-bottom: 0;">
                        <input type="submit" class="btn btn-success btn-sm" value="Save"/> or
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-danger">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<section>
    @Html.Partial("QueryConfigDoc")
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}