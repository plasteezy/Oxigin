@using Web.Admin.Models
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@section header{
	<h2>Add New User</h2>
	    <div class="page-header">
        <h1 class="pull-left">
            <i class="fa fa-list-alt"></i>
            <span>User :: Create</span>
        </h1>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-header dark-background">
                <div class="title">
                    <div class="fa fa-plus-square"></div>
                    Enter User Details
                </div>
                <div class="actions">
                    <a class="btn box-collapse btn-xs btn-link" href="#">
                        <i></i>
                    </a>
                </div>
            </div>
            <div class="box-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AccessLevel)
                        @Html.DropDownListFor(model => model.AccessLevel, new[]
                        {
                            new SelectListItem {Text = Constant.SuperAdmin, Value = Constant.SuperAdmin},
                            new SelectListItem {Text = Constant.Admin, Value = Constant.Admin}
                        }, "Choose...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AccessLevel)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword)
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>

                    <div class="form-actions form-actions-padding-sm form-actions-padding-md form-actions-padding-lg" style="margin-bottom: 0;">
                        <input type="submit" class="btn btn-success btn-sm" value="Save" /> or
                        <a href="@Url.Action("Index", "AdminAccount")" class="btn btn-sm btn-danger">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
